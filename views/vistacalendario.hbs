    {{#if asesor}}
      <h3 class="text-center">Bienvenido {{asesor}}</h3>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <hr>
                <br/>
                <div id="bootstrapModalFullCalendar"></div>
            </div>
        </div>
    </div>
    
     <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <ul class="list-group">
              <li class="list-group-item text-center">Asesores</li>
              <li class="list-group-item text-center" style="background-color: #AFAFAF;">Cras justo odio</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div id="fullCalModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden=true>Ã—</span> <span class="sr-only">close</span></button>
                    <h4 id="modalTitle" class="modal-title"></h4>
                </div>
                <div id="modalBody" class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    
    
     
    
    


    <script>
        $(document).ready(function() {
            $('#bootstrapModalFullCalendar').fullCalendar({
               lang: 'es',
                header: {
                    left: '',
                    center: 'prev title next',
                    right: 'month,basicWeek,basicDay'
                },
                eventClick:  function(event, jsEvent, view) {
                    $('#modalTitle').html(event.title);
                    $('#modalBody').html(event.description);
                    $('#fullCalModal').modal();
                    return false;
                },
                businessHours: false, // display business hours,
                fixedWeekCount: false,
                showNonCurrentDates: false,
                displayEventTime: false,
                navLinks: true, // can click day/week names to navigate views
                events:
                [
                   {{#each eventos}}
                   {
                      title:'{{cliente}}',
                      description:'{{descripcion}}',
                      start:moment('{{fecha}}', "DD-MM-YYYY"),
                      asesor: '{{asesor}}'
                   },
                   {{/each}}
                ],
                eventRender: function(event, element) {
                if(event.asesor == "andres") {
                    element.css('background-color', '#94BA18');
                }
                else {
                   element.css('background-color', '#337CBB');  
                }
            }
            });
        });
    </script>
</body>
</html>