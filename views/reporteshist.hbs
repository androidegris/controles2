          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã</button>
            <h4 class="modal-title">Resumen Clientes</h4>
          </div>
          <div class="modal-body">
              <p></p>
              {{#each resumenClientes}}
            <h4>
              <strong>{{cliente}}</strong></h4>
              {{#each fechas}}
             <h4 class="text-center">
                 {{this}}
              </h4>
             {{/each}}
            <h4  class="text-center">
              <strong>{{strH}}</strong></h4>
            <hr>
            {{/each}}
            <h4>
              <strong>Total facturado:</strong>&nbsp;{{t_horas_fact}}</h4>
            <p></p>
          </div>
          <div class="modal-footer">
            <a class="btn btn-primary" data-dismiss="modal">Cerrar</a>
          </div>
        </div>
      </div>
    </div>    
    {{/if}}
        
        
        
        
        
        
        
        
